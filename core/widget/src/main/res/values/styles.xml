<resources>

    <style name="Widget.WiFiWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">@dimen/widget_padding</item>
        <item name="android:background">@drawable/widget_background</item>
    </style>

    <style name="IpSubPropertyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner_shape</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WiFiPropertyLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingVertical">1.5dp</item>
    </style>

    <style name="BottomBarButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">2dp</item> <!-- To decrease drawable size -->
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
